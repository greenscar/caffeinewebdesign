	SET
		EMAIL ='#FORM.Email#',
		FIRST_NAME = '#FORM.FirstName#',
		ZIP = '#FORM.zipcode#',
		HTML_FORMAT = '#FORM.FaveThing#',
		COUPONS = '#FORM.Coupon#',
		CAP = '#FORM.CAP#',
		LIVE = 'T'
	WHERE
		EMAIL = '#Form.Email#';
</cfquery>

		
