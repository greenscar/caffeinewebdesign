<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/j2ee/dtds/web-app_2_3.dtd">

<web-app>
  <servlet>
    <servlet-name>aCalendar</servlet-name>
    <servlet-class>Calendar.TagCal</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DB_Test</servlet-name>
    <servlet-class>DB_Test</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>handleLogin</servlet-name>
    <servlet-class>Facades.loginFacade</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>controller</servlet-name>
    <servlet-class>ControllerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>aCalendar</servlet-name>
    <url-pattern>/TagCal</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DB_Test</servlet-name>
    <url-pattern>/DB_Test</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>handleLogin</servlet-name>
    <url-pattern>/servlet/Facades.LoginFacade</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>controller</servlet-name>
    <url-pattern>*.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>controller</servlet-name>
    <url-pattern>*.htm</url-pattern>
  </servlet-mapping>
</web-app>